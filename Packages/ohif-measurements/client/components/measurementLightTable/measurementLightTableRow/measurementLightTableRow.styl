@import "{ohif:design}/app"

.measurementLightTableRow
  display: flex
  margin-left: -6px
  margin-top: 2px
  padding-left: 6px
  opacity: 0.7
  transform(scale(1))
  width: calc(100% + 6px)

  .measurementRowSidebar
    theme('background', '$uiGray')
    theme('color', '$textSecondaryColor')
    cursor: pointer
    flex: 1
    max-width: 30px
    transition(all 0.3s ease)

    .measurementNumber
      font-size: 14px
      font-weight: 400
      margin-right: 5px
      padding-top: 10px
      text-align: center

  &:hover
    opacity: 1
    background-color: #101010

  &.active
    opacity: 1
    background-color: #101010
    .measurementRowSidebar
      theme('color', '$activeColor')

    .measurementDetails
      height: 105px

      .nonEditableContent
        display: none

      .measurementContainer
        .descriptionContainer, .locationContainer
          display: block
          &:hover .edit-icon-container
            visibility: visible


  .measurementRowContent
    flex: 1

  .measurementDetails
    padding: 5px;
    line-height: 30px
    font-size: 14px
    transition(all 0.3s ease)
    height: 70px

    .measurementValue
        margin: 0px 7px
        theme('color', '$textPrimaryColor')

  .measurementContainer
    display: flex

    .nonEditableContent
      display: block
      margin: 0px 7px
      font-weight: 100

    .descriptionContainer, .locationContainer
      theme('border', '1px solid $uiGray')
      position: relative
      flex: 50    
      padding: 7px
      margin: 2px 4px
      display: none

    .inputLabel
      theme('color', '$textSecondaryColor')
      display: block
      font-size: 12px
      line-height: 12px
      margin-bottom: 5px
      
      font-weight: 100

    .locationValue, .descriptionValue
      theme('color', '$textPrimaryColor')
      background-color: transparent
      border: 0
      padding: 0
      margin-bottom: 0px
      line-height: 18px
      font-size: 13px
      transition(all 0.3s ease)
      font-weight: 100

    .edit-icon-container
      visibility: hidden
      position: absolute
      transition(all 0.1s ease)
      top: 15px
      right: 15px

      .edit-icon, .close-icon
        theme('fill', '$uiGray')
        theme('stroke', '$uiGray')
        width: 14px
        height: 13px
